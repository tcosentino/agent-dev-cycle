{
  "name": "task-dataobject",
  "type": "dataobject",
  "version": "0.1.0",
  "description": "Task data object. Represents work items that agents create and complete.",
  "entry": "index.ts",
  "schema": {
    "fields": [
      { "name": "id", "type": "uuid", "auto": true },
      { "name": "projectId", "type": "uuid", "required": true },
      { "name": "key", "type": "string", "required": true, "unique": true },
      { "name": "title", "type": "string", "required": true, "max": 200 },
      { "name": "description", "type": "text" },
      { "name": "type", "type": "enum", "values": ["epic", "api", "backend", "frontend", "testing", "documentation", "devops"] },
      { "name": "priority", "type": "enum", "values": ["critical", "high", "medium", "low"] },
      { "name": "status", "type": "enum", "values": ["todo", "in-progress", "review", "done", "blocked"], "default": "todo" },
      { "name": "assignee", "type": "string" },
      { "name": "createdAt", "type": "date", "auto": true },
      { "name": "updatedAt", "type": "date", "auto": true }
    ]
  },
  "endpoints": [
    { "method": "GET", "path": "/tasks", "description": "List all tasks" },
    { "method": "GET", "path": "/tasks/:id", "description": "Get task by ID" },
    { "method": "GET", "path": "/projects/:projectId/tasks", "description": "List tasks for a project" },
    { "method": "POST", "path": "/tasks", "description": "Create a new task" },
    { "method": "PUT", "path": "/tasks/:id", "description": "Update a task" },
    { "method": "DELETE", "path": "/tasks/:id", "description": "Delete a task" }
  ],
  "dependencies": ["project-dataobject"],
  "tags": ["core", "workflow"]
}
