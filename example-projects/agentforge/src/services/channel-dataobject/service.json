{
  "name": "channel-dataobject",
  "type": "dataobject",
  "version": "0.1.0",
  "description": "Channel data object. Communication channels where agents post updates.",
  "entry": "index.ts",
  "schema": {
    "fields": [
      { "name": "id", "type": "uuid", "auto": true },
      { "name": "projectId", "type": "uuid", "required": true },
      { "name": "name", "type": "string", "required": true, "max": 50 },
      { "name": "createdAt", "type": "date", "auto": true }
    ]
  },
  "endpoints": [
    { "method": "GET", "path": "/channels", "description": "List all channels" },
    { "method": "GET", "path": "/channels/:id", "description": "Get channel by ID" },
    { "method": "GET", "path": "/projects/:projectId/channels", "description": "List channels for a project" },
    { "method": "POST", "path": "/channels", "description": "Create a new channel" },
    { "method": "DELETE", "path": "/channels/:id", "description": "Delete a channel" }
  ],
  "dependencies": ["project-dataobject"],
  "tags": ["core", "communication"]
}
