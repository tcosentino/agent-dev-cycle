{
  "name": "message-dataobject",
  "type": "dataobject",
  "version": "0.1.0",
  "description": "Message data object. Messages posted by agents and system in channels.",
  "entry": "index.ts",
  "schema": {
    "fields": [
      { "name": "id", "type": "uuid", "auto": true },
      { "name": "channelId", "type": "uuid", "required": true },
      { "name": "projectId", "type": "uuid", "required": true },
      { "name": "type", "type": "enum", "values": ["system", "agent", "user"], "required": true },
      { "name": "sender", "type": "string" },
      { "name": "senderName", "type": "string" },
      { "name": "content", "type": "text", "required": true },
      { "name": "actionType", "type": "string" },
      { "name": "actionStatus", "type": "enum", "values": ["success", "error", "warning", "info"] },
      { "name": "actionLabel", "type": "string" },
      { "name": "actionSubject", "type": "string" },
      { "name": "createdAt", "type": "date", "auto": true }
    ]
  },
  "endpoints": [
    { "method": "GET", "path": "/messages", "description": "List all messages" },
    { "method": "GET", "path": "/messages/:id", "description": "Get message by ID" },
    { "method": "GET", "path": "/channels/:channelId/messages", "description": "List messages in a channel" },
    { "method": "POST", "path": "/messages", "description": "Post a new message" },
    { "method": "DELETE", "path": "/messages/:id", "description": "Delete a message" }
  ],
  "dependencies": ["channel-dataobject", "project-dataobject"],
  "tags": ["core", "communication"]
}
